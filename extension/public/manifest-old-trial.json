{
  "manifest_version": 3,
  "name": "PDF Viewer",
  "version": "3.6.19",
  "description": "Uses HTML5 to display PDF files directly in the browser.",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "permissions": [
    "fileBrowserHandler",
    "webRequest",
    "<all_urls>",
    "tabs",
    "webNavigation",
    "storage"
  ],
  "action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "Show PDF URL",
    "default_popup": "pageActionPopup.html"
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*",
      "ftp://*/*",
      "file://*/*"
    ],
    "run_at": "document_start",
    "all_frames": true,
    "css": ["contentstyle.css"],
    "js": ["contentscript.js"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "file_browser_handlers": [{
    "id": "open-as-pdf",
    "default_title": "Open with PDF Viewer",
    "file_filters": [
      "filesystem:*.pdf"
    ]
  }],
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "minimum_chrome_version": "92",
  "incognito": "split",
  "web_accessible_resources": [
    {
      "resources": ["content/web/viewer.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "ftp://*/*",
    "file://*/*"
  ]
}