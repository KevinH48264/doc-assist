{
  "manifest_version": 3,

  "name": "ChatGPT for websites",
  "description": "ChatGPT response one-click away about the website",
  "version": "0.0.1.0",

  "options_ui": {
    "page": "options.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content_script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["js/images/*"],
    "matches": ["<all_urls>"],
    "extension_ids": []
  }], 

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["contextMenus", "storage"],

  "host_permissions": ["<all_urls>"]
}
